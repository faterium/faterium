{
	"name": "faterium-app",
	"private": true,
	"version": "0.1.0",
	"main": "index.js",
	"scripts": {
		"start": "expo start",
		"android": "expo start --android",
		"ios": "expo start --ios",
		"web": "expo start --web",
		"clean": "rm -rf node_modules,.expo"
	},
	"dependencies": {
		"expo": "^49.0.0",
		"expo-status-bar": "^1.6.0",
		"nativewind": "^2.0.11",
		"react": "^18.2.0",
		"react-native": "^0.72.1"
	},
	"devDependencies": {
		"@babel/core": "^7.22.8",
		"@faterium/eslint-config": "workspace:*",
		"@faterium/tailwind-config": "workspace:*",
		"@types/react": "~18.0.38",
		"@types/react-native": "^0.72.2",
		"@types/webpack-env": "^1.18.1",
		"babel-plugin-module-resolver": "^5.0.0",
		"postcss": "^8.4.25",
		"tailwindcss": "^3.3.2",
		"typescript": "^5.1.3"
	},
	"eslintConfig": {
		"extends": "@faterium/eslint-config",
		"ignorePatterns": [
			"node_modules",
			"build",
			".expo",
			".expo-shared"
		],
		"overrides": [
			{
				"files": [
					"*.js"
				],
				"env": {
					"node": true
				}
			}
		]
	}
}
